<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="7dp"
    tools:context="com.dragonzmart.dragonzmart.HomeScreen">
    <include
        android:id="@+id/dragonzmart_toolbar"
        layout="@layout/custom_appbar">
    </include>

    <EditText
        android:id="@+id/keyword"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dragonzmart_toolbar"
        android:padding="14dp"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="182dp"
        android:background="@drawable/customedittext"
        android:fontFamily="sans-serif"
        android:hint="Type your item to search....."
        android:inputType="text" />

    <Button
        android:id="@+id/search_button"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="235dp"
        android:layout_toRightOf="@id/keyword"
        android:background=" @drawable/searchicon1"
        android:textColor="#fff" />
    <Button
        android:id="@+id/rmq_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Request for more Quotes"
        android:textStyle="bold"
        android:textSize="15sp"
        android:background="#ED1C24"
        android:textColor="#fff" />

</RelativeLayout>
